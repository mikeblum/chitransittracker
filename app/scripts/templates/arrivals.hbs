{{#if busRoute}}
<table class="table routeTable busStop" style="background-color:#{{route.routeColorCode}};">
		<tr>
			<td class="line" style="color: #{{routeTextColor}};">
				<img class="transit_logo" src="{{route.routeIcon}}"></img></td>
			<td class="line">{{ route.stopName }}</td>
		</tr>
</table>
{{/if}}

<div class="spinner" id="arrivalsSpinner">
    <div class="bounce1"></div>
    <div class="bounce2"></div>
    <div class="bounce3"></div>
</div>

{{#if error}}
	<div class="alert alert-warning fade in" id="error">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <p><strong>Sorry! </strong>{{ error }}</p>
    </div>
{{else}}
	<table id="arrivalsTable" class="table routeTable">
		{{#each arrivals}}
			<tr style="background-color:#{{routeColorCode}};">
				{{#if busArrivals}}
					<td class="line" style="color: #{{routeTextColor}};">{{ routeDir }}</td>
				{{/if}}
				<td class="line" style="color: #{{routeTextColor}};">{{ destination }}</td>
				{{#if approaching}}
					<td class="line" style="color: #{{routeTextColor}};">Arriving</td>
				{{else}}
					<td class="line" style="color: #{{routeTextColor}};">{{ computedTime }} Minutes</td>
				{{/if}}
			</tr>
		{{/each}}
	</table>
{{/if}}
<div class="arrivalsFooter" style="background-color:#{{route.routeColorCode}};">
	<span class="glyphicon glyphicon-refresh glyphicon-inverse pull-right" id="refresh"></span>
</div>