{{#if error}}
	<div class="alert alert-warning fade in" id="error">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <p><strong>Warning! </strong>{{ error }}</p>
    </div>
{{else}}
	<table id="arrivalsTable" class="table routeTable">
		{{#each arrivals}}
			<tr style="background-color:#{{routeColorCode}};">
				{{#if busArrivals}}
					<td class="line">{{ routeDir }}</td>
				{{/if}}
				<td class="line">{{ destination }}</td>
				{{#if approaching}}
					<td class="line">Arriving</td>
				{{else}}
					<td class="line">{{ computedTime }} Minutes</td>
				{{/if}}
			</tr>
		{{/each}}
	</table>
{{/if}}
<div class="arrivalsFooter" style="background-color:#{{route.routeColorCode}};">
	<span class="glyphicon glyphicon-refresh glyphicon-inverse pull-right" id="refresh"></span>
</div>